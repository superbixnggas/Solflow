# Server Configuration
PORT=3001
NODE_ENV=development

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/coinflow_solana?schema=public"

# Solana RPC
SOLANA_RPC_URL="https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_API_KEY"
SOLANA_RPC_DEVNET="https://devnet.helius-rpc.com/?api-key=YOUR_HELIUS_API_KEY"
NETWORK=mainnet-beta

# Jupiter API
JUPITER_API_URL="https://quote-api.jup.ag/v6"

# Pyth Price API
PYTH_API_URL="https://hermes.pyth.network/v2"

# Redis (Optional - for caching)
REDIS_URL="redis://localhost:6379"
ENABLE_CACHE=true

# Worker Configuration
REBALANCE_CRON_SCHEDULE="*/5 * * * *"

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000"
